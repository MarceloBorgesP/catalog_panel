<h2>{{title}}</h2>

<ul class="row">
  {{#each courses as |course|}}
    <li class="col-md-3 list-unstyled list-item">
      <div class="course">
        <figure>
          <img src="{{course.thumb}}" alt="{{course.title}}">
        </figure>
        <figcaption class="description">
          <a href="#" class="title">
            {{course.title}}
          </a>
          <br>
          <span>
            com <a href="#">{{course.author}}</a>
          </span>
        </figcaption>
      </div>
    </li>
  {{/each}}
</ul>
